{
  "name": "ecommerce-shop",
  "version": "1.0.0",
  "description": "MERN full stack app for online shopping",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \" npm run server \"  \"npm run client\" ",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WangHngLeee/ecommerce-shop.git"
  },
  "author": "Honglinpm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WangHngLeee/ecommerce-shop/issues"
  },
  "homepage": "https://github.com/WangHngLeee/ecommerce-shop#readme",
  "devDependencies": {
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "react-helmet": "^6.1.0"
  }
}
